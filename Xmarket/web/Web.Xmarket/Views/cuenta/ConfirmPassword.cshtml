@model Web.Xmarket.Models.Account.ForgotPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>




<html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>LIMEDICA ERP | Recuperar Clave</title>
    <meta name="robots" content="noindex, nofollow">

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="@Url.Content("~/AdminLTE/bootstrap/css/bootstrap.min.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/animate.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Fonts/font-awesome/css/font-awesome.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/animate.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Site.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/plugins/sweetalert/sweetalert.css")" />
    <link rel="stylesheet" href="@Url.Content("~/AdminLTE/bower_components/Ionicons/css/ionicons.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/AdminLTE/dist/css/AdminLTE.css")">


    <script src="@Url.Content("~/AdminLTE/plugins/jQuery/jquery-2.2.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/AdminLTE/plugins/jQuery/jquery-2.2.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/AdminLTE/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/plugins/sweetalert/sweetalert.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Base/BaseWeb.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jsview/account/account.signin.js")" type="text/javascript"></script>

    @if (ViewBag.EstadoError != null)
    {
        if (ViewBag.EstadoError != 0)
        {
            <script type="text/javascript">
        $(document).ready(function () {
            var mensajeError = '@ViewBag.MensajeError';
            mensajeError = CorregirTildesEnMensaje(mensajeError);
            swal({ title: "Alerta", text: mensajeError, type: "warning", confirmButtonText: "Aceptar" });
        });
            </script>
        }
    }

</head>


<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>LIMEDICA</b> ERP
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">

            <p class="login-box-msg"> Se le ha enviado un correo con su contraseña.</p>


            @using (Html.BeginForm("Index", "Account", FormMethod.Post, new { id = "formsubmit", @class = "m-t", @role = "form" }))
    {



        <button type="submit" class="btn btn-primary btn-md btn-block">Volver</button>
}

        </div>

    </div>



</body>


</html>
