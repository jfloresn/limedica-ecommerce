@model Web.Xmarket.Models.Cuenta.DireccionesModel
@{

    Layout = "~/Views/Shared/_Layoutv.cshtml";
}


@section Styles {
    <meta name="robots" content="noindex, nofollow">
}

<header class="bg-header">
    <div class="container">
        <div class="row gx-5 align-items-center ">

            <div class="header-cuenta" style="">

                <div class="limedica-cuenta">

                    <div class="slider-body-path">
                        <a href="~/" class="limedica-path">Home</a>
                        <i class="fas fa-chevron-right dropdown-arrow text-path"></i>
                        <a href="@Url.Content("~/cuenta/micuenta")" class="limedica-path">Mi Cuenta</a>
                        <i class="fas fa-chevron-right dropdown-arrow text-path"></i>
                        <span class="limedica-path">Direcciones</span>



                    </div>



                    <div class="limedica-micuenta-body">

                        <h1 class="my-5">Direcciones</h1>

                        <div class="row limedica-micuenta-content mb-10">

                            <div class="col-8 limedica-micuenta-item ">


                                <h2 class="limedica-micuenta-direcciones-admindirec">Administra tus direcciones</h2>

                                <p class="mt-4">
                                    Las siguientes direcciones se utilizarán en la página de pago de forma predeterminada.

                                </p>


                                <div class="row mt-5">


                                    <div class="col-6">
                                        <h3 class="limedica-micuenta-direcciones">Dirección de Envio</h3>

                                        <div class="mt-4">
                                            <label>John Doe </label> <br />
                                            <label>Jr. Garcilazo de la Vega 1566 </label> <br />
                                            <label>Lima, Perú</label> <br />
                                            <label>Lince </label>  <br />
                                        </div>
                                        <button class="btn-limedica btn-limedica-secondary mt-5" type="submit">Editar </button>
                                        <button class="btn-limedica btn-limedica-secondary mt-5" type="submit">Borrar </button>
                                    </div>
                                    <div class="col-6">
                                        <h3 class="limedica-micuenta-direcciones">Dirección de Facturación</h3>
                                        <div class="mt-4">
                                            <label>John Doe </label><br />
                                            <label>Jr. Garcilazo de la Vega 1566 </label><br />
                                            <label>Lima, Perú</label><br />
                                            <label>Lince </label> <br />
                                        </div>
                                        <button class="btn-limedica btn-limedica-secondary mt-5" type="submit">Editar </button>
                                        <button class="btn-limedica btn-limedica-secondary mt-5" type="submit">Borrar </button>
                                    </div>


                                </div>




                                <button class="btn-limedica btn-limedica-secondary mt-5" type="submit">Añadir una nueva dirección </button>



                            </div>

                            <div class="col-4 limedica-micuenta-item">

                                @Html.Partial("_CuentaMenu", Model)



                            </div>



                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

</header>

