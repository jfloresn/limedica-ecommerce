@model Web.Xmarket.Models.Test.MemoriaViewModel

@{

    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Información de Memoria</title>
    <meta name="robots" content="noindex, nofollow">

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 20px;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 600px;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
        }

        h2 {
            color: #333;
        }

        .info {
            font-size: 18px;
            margin: 10px 0;
        }

        .highlight {
            font-weight: bold;
            color: #007bff;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Estado de Memoria del Servidor</h2>
        <p class="info">📌 <strong>Memoria usada por IIS:</strong> <span class="highlight">@Model.MemoriaUsada MB</span></p>
        <p class="info">📌 <strong>Memoria total del servidor:</strong> <span class="highlight">@Model.MemoriaTotal MB</span></p>
        <p class="info">📌 <strong>Memoria libre disponible:</strong> <span class="highlight">@Model.MemoriaDisponible MB</span></p>
    </div>

</body>
</html>
